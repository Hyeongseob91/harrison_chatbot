# Database Configuration
DATABASE_URL=postgresql://chatbot_user:chatbot_password@localhost:5432/chatbot_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000

# LLM Configuration (GPT-OSS)
OPENAI_API_KEY=your-gpt-oss-api-key-here
OPENAI_API_BASE=http://your-gpt-oss-endpoint/v1
MODEL_NAME=your-gpt-oss-model-name

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=[".pdf", ".txt", ".docx", ".doc", ".xlsx", ".xls"]

# Vector Database Settings
COLLECTION_NAME=document_analysis
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Document Analysis Settings
ANALYSIS_DOMAINS=["legal", "medical", "financial", "technical", "general"]
DEFAULT_DOMAIN=general